        <div class="order-summary">
            <h2>Order Summary</h2>
            <table id="order-table">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Ordered items will be added here -->
                </tbody>
            </table>
            <div class="total">
                <span>Total: ₹</span><span id="total-amount">0</span>
            </div>
            <button id="place-order">Place Order</button>
        </div>
    </div>

    <script src="fastfood.js"></script>
